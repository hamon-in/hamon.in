---

layout: base
permalink: /articles/

title: Articles & Guides

---


<header class="page-header">
  <div class="container">
    <h2 class="size-xxlarge title-one">
      {{ page.title }}
    </h2>
    
    <ul class="bullet-list">
      {% assign nav_items = site.topics %}
      {% for item in nav_items %}
        <li>
          <a href="{{ site.baseurl | append: item.url }}">
            {{ item.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</header>

<section class="wrapper">
  <ul class="container">
    {% for article in site.articles reversed %}
      {% assign link = site.baseurl | append: article.url %}
      <li>
        <h3 class="title-three">
          <a href="{{ link }}">
            {{ article.title | smartify }}
          </a>
        </h3>
        
        <div class="indent-one prose">
          {{ article.brief | markdownify }}
          <p class="collapse">
            <a class="silent" href="{{ link }}">
              <time class="title-fineprint size-xsmall">
                {{ article.date | date: '%b %-d, %Y' }}
              </time>
            </a>
          </p>
        </div>
      </li>
    {% endfor %}
  </ul>
</section>

